<%= form_tag({ :controller => 'search', :action => 'index' }, :method => "get", :class => 'header') do %>
  <% if params[:from] %>
    <%= select_tag(:from, options_from_collection_for_select(Language.all, :id, :name, params[:from])) %>
  <% else %>
    <%= select_tag(:from, options_from_collection_for_select(Language.all, :id, :name)) %>
  <% end %>
  <% if params[:to] %>
    <%= select_tag(:to, options_from_collection_for_select(Language.all, :id, :name, params[:to])) %>
  <% else %>
    <%= select_tag(:to, options_from_collection_for_select(Language.all, :id, :name)) %>
  <% end %>
  <%= text_field_tag(:word) %>
  <%= submit_tag(t("search")) %>
<% end %>